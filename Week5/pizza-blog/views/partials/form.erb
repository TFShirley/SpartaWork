<form class="" action="/<%= @pizza[:id] %>" method="post">
  <div class="">
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= @pizza[:title] %>" placeholder="Enter Title">
  </div>
  <div class="">
    <label for="body"></label>
    <input type="textarea" name="body" placeholder="Enter body of PIZZA post">
  </div>
  <div class="">
    <input type="submit" name="" value="Save PIZZA Post">
  </div>
  <% if @pizza[:id] != "" %>
    <input type="hidden" name="_method" value="put">
  <% end %>
</form>
